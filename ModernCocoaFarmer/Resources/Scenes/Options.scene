<?xml version="1.0" encoding="utf-8"?>
<Scene>
  <GameObjects>
    <GameObject name="OptionsScene" position="960,540,0">
      <Components>
        <Canvas/>
        <GraphicsRaycaster/>
        <ResolutionScaler target_resolution="1920,1080"/>
      </Components>
      <GameObjects>
        <GameObject position="0,300,0" name="Title">
