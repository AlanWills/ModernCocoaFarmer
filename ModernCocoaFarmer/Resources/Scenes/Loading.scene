          </GameObjects>
        </GameObject>
        <GameObject name="SceneKiller">
          <Components>
            <LimitedLifeTime lifetime="3" trigger_key="esc">
              <OnDeathCallbacks>
                <Callback name="KillOwnerScene" arg=""/>
