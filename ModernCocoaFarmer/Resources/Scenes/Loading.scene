<?xml version="1.0" encoding="utf-8"?>
<Scene>
  <GameObjects>
    <GameObject name="Canvas">
      <Components>
        <Canvas projection_mode="Orthographic" dimensions="1,1"/>
      </Components>
      <GameObjects>
        <GameObject name="Background" position="0.5,0.5">
          <Components>
            <SpriteRenderer sprite="Textures\UI\Utility\WhitePixel.png" size="1,1"/>
          </Components>
          <GameObjects>
            <GameObject name="WalkingChildAnimation" position="0, 0.25,1">
              <Components>
                <SpriteRenderer sprite="Textures\Worker\WalkingNoMachete\WalkingNoMacheteAnimation.png" preserve_aspect_ratio="true"/>
